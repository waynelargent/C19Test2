@page "{SortString?}"
@model C19Test2.Pages.Cases.IndexModel
@{
    ViewData["Title"] = "Index";
}
<h1>Index</h1>
<p>
    <a asp-page="Create">Create New</a>
</p>
<div class="accordion" id="accordionExample">
    <div class="card">
        <div class="card-header" id="headingOne">
            <h2 class="mb-0">
                <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                    Searh and Filter
                </button>
            </h2>
        </div>
        <div id="collapseOne" class="collapse " aria-labelledby="headingOne" data-parent="#accordionExample">
            <div class="card-body">
                <form>
                        Last Name:
                        <input type="text" asp-for="SearchString" />
                        Sort By <select asp-for="SortString">
                            <option value=""></option>
                            <option value="status">Status</option>
                            <option value="exposuredateA">Exposure Date (Oldest first)</option>
                            <option value="exposuredateD">ExposureDate (Newest first)</option>
                        </select>
                        <input type="submit" value="Search" />
                </form>
            </div>
        </div>
    </div>
 </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Case[0].ExposureDate)
                </th>
                <th>
                    <a href="/Cases/Index?SortString=snumber">@Html.DisplayNameFor(model => model.Case[0].SNumber)</a>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Case[0].StatusID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Case[0].LocationID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Case[0].DepartmentID)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Case)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName) @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ExposureDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status.StatusDescription)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Location.LocationDescription)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Department.DepartmentDescription)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.CaseID">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.CaseID">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.CaseID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
